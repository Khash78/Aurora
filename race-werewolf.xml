<?xml version="1.0" encoding="utf-8" ?>
<elements>
  <info>
    <name>Werewolf Race</name>
    <update version="1.0.0">
      <file name="race-werewolf.xml" url="https://raw.githubusercontent.com/Khash78/Aurora/refs/heads/main/race-werewolf.xml" />
    </update>
  </info>

  <element name="Werewolf" type="Race" source="Homebrew" id="ID_RACE_WEREWOLF">
    <description>
      <p class="flavor">Cursed with lycanthropy, a Werewolf can transform into a wolf or hybrid form, gaining enhanced strength, speed, and senses.</p>
    </description>
    <sheet display="false"/>
    <setters>
      <set name="speed" modifier="0">30</set>
    </setters>
    <rules>
      <stat name="strength" value="2"/>
      <stat name="dexterity" value="1"/>
      <stat name="innate speed" value="30" bonus="base"/>
      <grant type="Size" id="ID_SIZE_MEDIUM"/>
      <grant type="Racial Trait" id="ID_RACIAL_TRAIT_WEREWOLF_TRANSFORMATION"/>
    </rules>
  </element>

  <element name="Werewolf Transformation" type="Racial Trait" source="Homebrew" id="ID_RACIAL_TRAIT_WEREWOLF_TRANSFORMATION">
    <description>
      <p>Allows the Werewolf to transform into a wolf or hybrid form. Gains bonuses to strength, speed, and senses while transformed.</p>
    </description>
    <sheet display="false"/>
    <rules>
      <stat name="strength" value="2" modifier="temporary"/>
      <stat name="dexterity" value="1" modifier="temporary"/>
    </rules>
  </element>

</elements>
